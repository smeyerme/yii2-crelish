{#
 # @var string filterValue
 # @var string statusValue
 #}

<button class="c-button c-button--brand"><i class="fa-sharp fa-regular fa-search"></i></button>
<div class="o-field" style="position: relative;">
    <input class="c-field header-search-input" name="cr_content_filter" id="cr_content_filter"
           value="{{ filterValue|e }}"
           placeholder="{{ t('app', 'Search users...') }}">
    {% if filterValue is not empty %}
        <span class="search-clear-btn" style="position: absolute; right: 10px; top: 50%; transform: translateY(-50%); cursor: pointer;">
            <i class="fa-sharp fa-regular fa-times"></i>
        </span>
    {% endif %}
</div>

<select name="cr_status_filter" id="cr_status_filter" class="c-field header-status-filter" style="margin-left: 10px;">
    <option value="">{{ t('app', 'All statuses') }}</option>
    <option value="1"{% if statusValue == '1' %} selected{% endif %}>{{ t('app', 'Inactive') }}</option>
    <option value="2"{% if statusValue == '2' %} selected{% endif %}>{{ t('app', 'Online') }}</option>
    <option value="3"{% if statusValue == '3' %} selected{% endif %}>{{ t('app', 'Archived') }}</option>
</select> 