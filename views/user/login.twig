{% set crelishBundle = register_asset_bundle('giantbits/crelish/CrelishAsset', true) %}
{{ use('yii/widgets/ActiveForm') }}

<div class="modal">
  <div class="image-section">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 800 600">
      <!-- Background with subtle gradient -->
      <defs>
        <linearGradient id="bg-gradient" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#f8fafc;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#e2e8f0;stop-opacity:1" />
        </linearGradient>

        <!-- Pattern for texture -->
        <pattern id="dots" x="0" y="0" width="20" height="20" patternUnits="userSpaceOnUse">
          <circle cx="2" cy="2" r="1" fill="#94a3b8" opacity="0.2"/>
        </pattern>
      </defs>

      <!-- Background rectangle -->
      <rect width="800" height="600" fill="url(#bg-gradient)"/>
      <rect width="800" height="600" fill="url(#dots)"/>

      <!-- Main content group -->
      <g transform="translate(200, 100)">
        <!-- Abstract CMS elements -->
        <!-- Document stack -->
        <g transform="translate(0, 50)">
          <!-- Bottom document -->
          <rect x="0" y="20" width="300" height="180" rx="4" fill="#066866" opacity="0.1"/>
          <!-- Middle document -->
          <rect x="10" y="10" width="300" height="180" rx="4" fill="#066866" opacity="0.2"/>
          <!-- Top document -->
          <rect x="20" y="0" width="300" height="180" rx="4" fill="white" stroke="#334155" stroke-width="2"/>

          <!-- Content lines -->
          <g transform="translate(40, 30)">
            <!-- Header -->
            <rect width="120" height="12" rx="2" fill="#066866" opacity="0.8"/>

            <!-- Content lines -->
            <rect y="30" width="260" height="8" rx="2" fill="#94a3b8" opacity="0.5"/>
            <rect y="50" width="240" height="8" rx="2" fill="#94a3b8" opacity="0.5"/>
            <rect y="70" width="260" height="8" rx="2" fill="#94a3b8" opacity="0.5"/>

            <!-- Action buttons -->
            <rect y="100" width="80" height="24" rx="4" fill="#066866" opacity="0.8"/>
            <rect x="90" y="100" width="80" height="24" rx="4" fill="#94a3b8" opacity="0.3"/>
          </g>
        </g>

        <!-- Floating elements -->
        <!-- Settings gear -->
        <circle cx="400" cy="100" r="30" fill="white" stroke="#334155" stroke-width="2"/>
        <path d="M385,100 L415,100 M400,85 L400,115" stroke="#334155" stroke-width="2"/>
        <circle cx="400" cy="100" r="10" fill="#066866"/>

        <!-- Menu icon -->
        <g transform="translate(50, 300)">
          <rect width="40" height="40" rx="8" fill="white" stroke="#334155" stroke-width="2"/>
          <g transform="translate(10, 12)">
            <rect width="20" height="2" rx="1" fill="#066866"/>
            <rect y="7" width="20" height="2" rx="1" fill="#066866"/>
            <rect y="14" width="20" height="2" rx="1" fill="#066866"/>
          </g>
        </g>

        <!-- Image placeholder -->
        <g transform="translate(350, 280)">
          <rect width="60" height="60" rx="8" fill="white" stroke="#334155" stroke-width="2"/>
          <path d="M10,40 L20,30 L30,35 L40,20 L50,40" stroke="#066866" stroke-width="2" fill="none"/>
          <circle cx="20" cy="20" r="5" fill="#066866"/>
        </g>
      </g>

      <!-- Decorative elements -->
      <g transform="translate(50, 50)" opacity="0.1">
        <circle cx="0" cy="0" r="5" fill="#334155"/>
        <circle cx="20" cy="20" r="5" fill="#334155"/>
        <circle cx="40" cy="0" r="5" fill="#334155"/>
      </g>

      <g transform="translate(700, 500)" opacity="0.1">
        <circle cx="0" cy="0" r="5" fill="#334155"/>
        <circle cx="20" cy="20" r="5" fill="#334155"/>
        <circle cx="40" cy="0" r="5" fill="#334155"/>
      </g>
    </svg>
  </div>
  <div class="form-section">
    <div class="header">
      <img src="{{ crelishBundle.baseUrl }}/img/Crelish-Logo-Light.svg" border="0" width="180" />
      <p>{{ t('crelish', 'Enter your credentials to continue') }}</p>
    </div>

    {% set form = active_form_begin({
      'id': 'login',
      'options' : {'class' : ''}
    }) %}

      {{ form.errorSummary(model) | raw }}

      <div class="form-group">
        {{ form.field(model, 'email', {'errorOptions':{'class':'help hidden'}, 'options':{'class':'gradient-box'}, 'inputOptions':{'class':'c-field', 'placeholder':'Email'}}).label(false) | raw }}
      </div>
      <div class="form-group">
        {{ form.field(model, 'password', {'errorOptions':{'class':'help hidden'}, 'options':{'class':''}, 'inputOptions':{'class':'c-field', 'placeholder':'Password'}}).passwordInput().label(false) | raw }}
      </div>
      <button type="submit">{{ t('crelish', 'Sign In') }}</button>

    {{ active_form_end() }}
    <span>
      {{ app.params.crelish.version }}
    </span>
  </div>
</div>

{% apply registerCss %}
* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
}

body {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: #f1f5f9;
  font-family: inherit;
  padding: 1rem;
  position: relative;
  overflow: hidden;
}

body::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgb(2,0,36);
  background: linear-gradient(40deg, rgba(2,0,36,1) 0%, rgba(6,104,102,1) 55%);
  opacity: 0.8;
  z-index: 0;
}

section {
    width: 100%;
}

.modal {
  position: relative;
  z-index: 1;
  width: 120ch;
  max-width: 95%;
  background-color: white;
  border-radius: 8px;
  overflow: hidden;
  box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1);
  display: flex;
  margin-inline: auto;
}

.image-section {
  width: 50%;
  min-height: 600px;
  position: relative;
  overflow: hidden;
}

.image-section svg {
  object-position: center;
  transform: translateX(-50%);
  margin-left: 50%;
  object-fit: cover;
  height: 100%;
  width: auto;
}

.form-section {
  width: 50%;
  padding: 2.5rem;
  display: flex;
  flex-direction: column;
  justify-content: center;
  background: white;
}

.header {
  margin-bottom: 2rem;
  text-align: center;
}

.header img {
  margin-bottom: 1rem;
  max-width: 100%;
  height: auto;
}

.header h2 {
  font-size: 1.875rem;
  font-weight: bold;
  margin-bottom: 0.5rem;
}

.header p {
  color: #64748b;
}

.login-form {
  display: flex;
  flex-direction: column;
  gap: 1.5rem;
}

.form-group {
  display: flex;
  flex-direction: column;
  margin-bottom: 1rem;
}

.form-group label {
  margin-bottom: 0.5rem;
  font-size: 0.875rem;
  font-weight: 500;
}

.form-group input {
  width: 100%;
  padding: 0.75rem;
  border-radius: 4px;
  border: 1px solid #e2e8f0;
  font-size: 1rem;
  transition: border-color 0.2s ease;
}

.form-group input:focus {
  outline: none;
  border-color: #066866;
}

button {
  width: 100%;
  padding: 0.75rem;
  background-color: #066866;
  color: white;
  border: none;
  border-radius: 4px;
  font-size: 1rem;
  cursor: pointer;
  margin-top: 1rem;
  transition: background-color 0.2s ease;
}

button:hover {
  background-color: #054C4AFF;
}

.forgot-password {
  text-align: center;
  font-size: 0.875rem;
}

.forgot-password a {
  color: #64748b;
  text-decoration: none;
  transition: color 0.2s ease;
}

.forgot-password a:hover {
  color: #475569;
}

span {
  font-size: 0.75rem;
  margin-top: 1rem;
  color: darkgrey;
  text-align: center;
}

.error-summary {
  color: #e3342f;
  background-color: #fef2f2;
  padding: 1rem;
  border-radius: 4px;
  margin-bottom: 1rem;
}

.help {
  font-size: 0.75rem;
  color: #e3342f;
  display: block;
  margin-top: 0.25rem;
  padding-inline: 0.75rem;
}

/* Mobile optimizations */
@media (max-width: 768px) {
  .modal {
    flex-direction: column;
    max-width: 100%;
    margin: 0;
    height: auto;
  }

  .image-section,
  .form-section {
    width: 100%;
  }

  .image-section {
    min-height: 150px;
    max-height: 280px;
  }
  
  .image-section svg {
    height: 100%;
    width: 100%;
    object-fit: cover;
    transform: none;
    margin-left: 0;
  }

  .form-section {
    padding: 1.5rem;
  }
  
  .header {
    margin-bottom: 1.5rem;
  }
  
  .header img {
    width: 140px;
  }
  
  .form-group {
    margin-bottom: 0.75rem;
  }
  
  button {
    margin-top: 0.75rem;
    padding: 0.85rem;
  }
}

/* Small mobile devices */
@media (max-width: 400px) {
  body {
    padding: 0.5rem;
  }
  
  .modal {
    border-radius: 6px;
  }
  
  .image-section {
    min-height: 120px;
  }
  
  .form-section {
    padding: 1.25rem;
  }
  
  .form-group input {
    padding: 0.65rem;
  }
}
{% endapply %}
