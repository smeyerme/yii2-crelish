<div class="c-input-group group-content-filter">
  {% include('@crelish/views/layouts/base_header_bar.twig') %}
  <a class="c-button" href="{{ url('crelish/content/index') }}">
    <span class="fui-arrow-left"></span> {{ t('crelish', 'Back') }}</span>
  </a>
</div>
<div class="c-input-group group-content-filter">
  <span id="submitButton" class="c-button btn-save c-button--success" type="button"
        onclick="$('#content-form').submit();">
          <i class="fa-sharp fa-regular  fa-save"></i></span>
  </span>
  <span class="c-button btn-save c-button--success-darker" type="button"
        onclick="$('#save_n_return').val(1); $('#content-form').submit();">
            <i class="fa-sharp fa-regular  fa-save"></i> <i class="fa-sharp fa-regular  fa-reply"></i></span>
  </span>
  <span class="c-button c-button--error" data-bs-toggle="modal"
        data-bs-target="#confirm-delete">
            <i class="fa-sharp fa-regular  fa-trash" aria-hidden="true"></i>
        </span>
</div>
<script>
  document.addEventListener('keydown', function (event) {
    
    if ((event.ctrlKey || event.metaKey) && event.key === 's') {
      event.preventDefault();
      document.getElementById('submitButton').click();
    }
  });
</script>
