{% extends '@app/views/layouts/crelish.twig' %}

{% block content %}
<div class="u-window-box-medium">
    <div class="panel panel-default card-modern">
        <div class="panel-heading card-footer">
            <h3 class="card-title">{{ t('app', 'UI Modernization Tools') }}</h3>
        </div>
        <div class="panel-body" style="padding: 2rem;">
            <p>{{ t('app', 'This tool allows you to apply modern styling to various parts of the CMS. You can choose to update specific views or apply global styling to the entire system.') }}</p>
            
            <div class="row" style="margin-top: 2rem;">
                <div class="col-md-6">
                    <div class="card-modern" style="height: auto; padding-bottom: 1rem;">
                        <div class="card-placeholder">
                            <i class="card-icon fa fa-paint-brush"></i>
                        </div>
                        <div class="card-footer">
                            <h4 class="card-title">{{ t('app', 'Update Specific Views') }}</h4>
                            <p class="card-subtitle">{{ t('app', 'Apply modern styling to specific controllers') }}</p>
                        </div>
                        <div style="padding: 1rem; text-align: center;">
                            <a href="{{ url('crelish/modernize/update-styles') }}" class="btn btn-primary">{{ t('app', 'Update Views') }}</a>
                        </div>
                    </div>
                </div>
                
                <div class="col-md-6">
                    <div class="card-modern" style="height: auto; padding-bottom: 1rem;">
                        <div class="card-placeholder">
                            <i class="card-icon fa fa-globe"></i>
                        </div>
                        <div class="card-footer">
                            <h4 class="card-title">{{ t('app', 'Apply Global Styling') }}</h4>
                            <p class="card-subtitle">{{ t('app', 'Apply modern styling to the entire CMS') }}</p>
                        </div>
                        <div style="padding: 1rem; text-align: center;">
                            <a href="{{ url('crelish/modernize/apply-global') }}" class="btn btn-primary">{{ t('app', 'Apply Global') }}</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="panel panel-default card-modern" style="margin-top: 2rem;">
        <div class="panel-heading card-footer">
            <h3 class="card-title">{{ t('app', 'Modern UI Components') }}</h3>
        </div>
        <div class="panel-body" style="padding: 2rem;">
            <h4>{{ t('app', 'Available Components') }}</h4>
            <p>{{ t('app', 'The following modern UI components are available for use in your templates:') }}</p>
            
            <ul style="margin-top: 1rem;">
                <li><strong>Tables:</strong> Add <code>table-modern</code> class to any table for a modern appearance</li>
                <li><strong>Cards:</strong> Add <code>card-modern</code> class to panels or cards for a modern look</li>
                <li><strong>Pagination:</strong> Add <code>pagination-modern</code> class to pagination elements</li>
                <li><strong>Status Badges:</strong> Use <code>status-badge</code> class with modifiers like <code>online</code>, <code>offline</code>, etc.</li>
                <li><strong>Grids:</strong> Use <code>grid-modern</code> class for responsive grid layouts</li>
            </ul>
            
            <h4 style="margin-top: 2rem;">{{ t('app', 'Usage Example') }}</h4>
            <pre style="background: #f1f5f9; padding: 1rem; border-radius: 8px; margin-top: 1rem;">
&lt;table class="table table-striped table-hover table-modern"&gt;
  &lt;!-- Table content here --&gt;
&lt;/table&gt;

&lt;div class="card-modern"&gt;
  &lt;div class="card-placeholder"&gt;
    &lt;i class="card-icon fa fa-file"&gt;&lt;/i&gt;
  &lt;/div&gt;
  &lt;div class="card-footer"&gt;
    &lt;h4 class="card-title"&gt;Card Title&lt;/h4&gt;
    &lt;p class="card-subtitle"&gt;Card Subtitle&lt;/p&gt;
  &lt;/div&gt;
&lt;/div&gt;
            </pre>
        </div>
    </div>
</div>
{% endblock %} 