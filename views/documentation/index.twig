<div class="content documentation-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <div class="documentation-content">
                            {{ content|raw }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% apply registerCss %}
.documentation-content {
    font-size: 16px;
    line-height: 1.6;
}

.documentation-content h1 {
    margin-bottom: 1.5rem;
}

.documentation-content h2 {
    margin-top: 2rem;
    margin-bottom: 1rem;
}

.documentation-content h3, .documentation-content h4 {
    margin-top: 1.5rem;
    margin-bottom: 0.8rem;
}

.documentation-content pre {
    padding: 1rem;
    background-color: #f5f5f5;
    border-radius: 4px;
    overflow-x: auto;
}

.documentation-content code {
    background-color: #f5f5f5;
    padding: 0.2rem 0.4rem;
    border-radius: 3px;
}

.documentation-content img {
    max-width: 100%;
    height: auto;
}

.documentation-content table {
    width: 100%;
    border-collapse: collapse;
    margin: 1rem 0;
}

.documentation-content table th,
.documentation-content table td {
    border: 1px solid #ddd;
    padding: 0.5rem;
}

.documentation-content blockquote {
    border-left: 4px solid #ddd;
    padding-left: 1rem;
    margin-left: 0;
    color: #666;
}

.documentation-page {
    padding-top: 1rem;
}
{% endapply %}