<div class="u-letter-box-large">
	<div class="split">
		<div>{{ content | raw }}</div>
		<div>
			<iframe id="page-frame" src="{{ app.request.hostInfo }}/{{ app.view.params.model.slug }}" ></iframe>
		</div>
	</div>
</div>
<span class="badge text-bg-secondary">{{ uuid }} : {{ ctype }}</span>

{% apply registerCss %}
	.page-builder .editor-overlay {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	z-index: 10000;
	display: flex;
	align-items: flex-end;
	justify-content: center;
	flex-direction: column;
	}

	.page-builder .overlay-container {
	position: relative;
	width: 55vw;
	height: 100vh;
	background-color: white;
	border-radius: 0;
	box-shadow: 0 5px 15px rgba(0, 0, 0, 0.5);
	display: flex;
	flex-direction: column;
	overflow: hidden;
	z-index: 1;
	right: 0;
	}

{% endapply %}


{% apply registerCss %}

.crelish-app-root #cr-left-pane {
	display: none;
}

#cr-right-pane {
	width: 100vw;
}


.split {
  display: grid;
  grid-template-columns: 6fr 8fr;
  align-content: stretch;
  align-items: stretch;
	gap: 1.333rem;
}

iframe#page-frame {
  cursor: not-allowed;
	pointer-events: none;
	background: white;
	width: 98%;
	z-index: 2;
	border: none;
	border-radius: 0.666rem;
	box-shadow: 0 0 0.333rem rgba(0,0,0, 0.333);
}

#content-form > div > div.o-grid.o-grid--wrap.o-grid--small-full {
  display: flex !important;
  flex-direction: column !important;
}

#content-form > div > div.o-grid.o-grid--wrap.o-grid--small-full > .o-grid__cell {
	width: 100% !important;
	flex: unset !important;
	max-width: unset !important;
}

{% endapply %}

{% apply registerJs %}
function adjustIframeHeight() {
  const iframe = document.getElementById('page-frame');
  const iframeDoc = iframe.contentDocument || iframe.contentWindow.document;
  iframe.style.height = (iframeDoc.body.scrollHeight) + 'px';
}

// Adjust height when iframe loads
document.getElementById('page-frame').onload = adjustIframeHeight;

// Optionally, adjust height on window resize
window.addEventListener('resize', adjustIframeHeight);
{% endapply %}
