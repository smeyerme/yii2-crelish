<div class="c-input-group group-content-filter">
	{% include('@crelish/views/layouts/base_header_bar.twig') %}
	<a class="c-button" href="{{ url('crelish/page/index') }}">
		<i class="fa fa-arrow-left"></i>
	</a>
	
	<a class="c-button c-button--warning" href="{{ chelper.urlFromSlug(app.controller.model.slug) }}"
	   data-tooltip="Seite anzeigen" target="_blank">
		<i class="fa fa-eye"></i>
	</a>
</div>
<div class="c-input-group group-content-filter">

  <span class="c-button btn-save c-button--success" type="button"
        onclick="$('#content-form').submit();">
    <i class="fa fa-save"></i>
  </span>
	
	<span class="c-button btn-save c-button--success-darker" type="button"
	      onclick="$('#save_n_return').val(1); $('#content-form').submit();">
    <i class="fa fa-save"></i> <i class="fa fa-reply"></i>
  </span>
	
	<span
			class="c-button c-button--error"
			data-toggle="modal"
			data-target="#confirm-delete">
    <i class="fa fa-trash" aria-hidden="true"></i>
  </span>

</div>
