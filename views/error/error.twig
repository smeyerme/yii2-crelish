{% extends "@giantbits/crelish/views/layouts/simple.twig" %}

{% block content %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card border-0 shadow-lg">
                <div class="card-body p-5 text-center">
                    <div class="error-icon mb-4">
                        <i class="fas fa-exclamation-triangle fa-5x text-danger"></i>
                    </div>
                    
                    <h1 class="display-4 fw-bold text-danger mb-3">{{ statusCode }}</h1>
                    
                    <h2 class="h4 mb-4 text-muted">
                        {% if statusCode == 404 %}
                            Page Not Found
                        {% elseif statusCode == 403 %}
                            Access Forbidden
                        {% elseif statusCode == 500 %}
                            Server Error
                        {% else %}
                            Error {{ statusCode }}
                        {% endif %}
                    </h2>
                    
                    <p class="lead mb-4">{{ userMessage }}</p>
                    
                    {% if errorId %}
                    <div class="alert alert-info border-0 mb-4" role="alert">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-info-circle me-2"></i>
                            <div>
                                <strong>Error ID:</strong> {{ errorId }}<br>
                                <small class="text-muted">Please include this ID when contacting support</small>
                            </div>
                        </div>
                    </div>
                    {% endif %}
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-center">
                        <button onclick="history.back()" class="btn btn-primary me-md-2">
                            <i class="fas fa-arrow-left me-1"></i>
                            Go Back
                        </button>
                        <a href="{{ url(['site/index']) }}" class="btn btn-outline-secondary">
                            <i class="fas fa-home me-1"></i>
                            Home Page
                        </a>
                    </div>
                    
                    <div class="mt-4 pt-4 border-top">
                        <p class="text-muted small mb-0">
                            If the problem persists, please contact our support team.
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
.error-icon {
    opacity: 0.8;
}

.card {
    border-radius: 1rem;
}

.btn {
    border-radius: 0.5rem;
    padding: 0.75rem 1.5rem;
    font-weight: 500;
}

.alert {
    border-radius: 0.75rem;
    background: rgba(13, 110, 253, 0.1);
    color: #0d6efd;
}

@media (max-width: 576px) {
    .card-body {
        padding: 2rem !important;
    }
    
    .display-4 {
        font-size: 3rem;
    }
    
    .error-icon i {
        font-size: 3rem !important;
    }
}
</style>
{% endblock %}